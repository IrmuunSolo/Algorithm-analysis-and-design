// Bottom-up, Dynamic programming буюу бүх дэд бодлогын шийдийг хадгалж, бусад дэд бодлогод ашиглана

class Solution {
    public int minCostClimbingStairs(int[] cost) {
        int n = cost.length;
        int[] dp = new int[n];
        dp[0] = cost[0];
        dp[1] = cost[1];

        for (int i = 2; i < n; i++) {
            dp[i] = cost[i] + Math.min(dp[i - 1], dp[i - 2]);
        }

        return Math.min(dp[n - 1], dp[n - 2]);
    }
}

// Top-down (Memoization)

class Solution {
    public int minCostClimbingStairs(int[] cost) {
        int n = cost.length;
        int[] memo = new int[n];
        return Math.min(dfs(n - 1, cost, memo), dfs(n - 2, cost, memo));
    }

    private int dfs(int i, int[] cost, int[] memo) {
        if (i < 0) return 0;
        if (i == 0 || i == 1) return cost[i];
        if (memo[i] != 0) return memo[i];

        memo[i] = cost[i] + Math.min(dfs(i - 1, cost, memo), dfs(i - 2, cost, memo));
        return memo[i];
    }
}


