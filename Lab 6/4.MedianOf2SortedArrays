class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        int i = 0,j = 0,k = 0;
        int l = nums1.length;
        int r = nums2.length;
        int[] merged = new int[l + r];
        while(i < l && j < r){
            if(nums1[i] <= nums2[j]){
                merged[k++] = nums1[i++];
            }
            else{
               merged[k++] = nums2[j++];
            }
        }
        while(i < l){
            merged[k++] = nums1[i++];
        }
        while(j < r){
            merged[k++] = nums2[j++];
        }
        int middle = merged.length/2;
        if(merged.length % 2 == 1){
            return (double)merged[middle];
        } else {
            return (merged[middle] + merged[middle - 1])/2.0; 
        }
    }
}